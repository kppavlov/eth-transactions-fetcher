{
  "compilerOptions": {
    "target": "ES2020", // Target modern JavaScript version
    "module": "CommonJS", // Use CommonJS module system (standard for Node.js)
    "rootDir": "./src", // Source directory
    "outDir": "./dist", // Output directory
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable ES module interoperability
    "forceConsistentCasingInFileNames": true, // Enforce case sensitivity in imports
    "skipLibCheck": true, // Skip type checking of declaration files
    "moduleResolution": "node", // Resolve modules as Node.js does
    "resolveJsonModule": true, // Allow importing JSON files
    "declaration": true // Generate .d.ts files
  },
  "include": ["./src/**/*"], // Include all TypeScript files in src
  "exclude": ["node_modules", "**/*.test.ts"]
}
